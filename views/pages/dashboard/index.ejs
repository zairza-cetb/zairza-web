  />
    <link rel="stylesheet" href="/css/dashboard.css">
  </head>
  <body class="flex">
    <%- include('../../partials/firebase.ejs') %>
    <%- include('../../partials/toast.ejs') %>
    <%- include('../../partials/deactivate.ejs') %>
    <aside class="relative bg-sidebar h-screen w-80 hidden lg:block shadow-xl">
      <div class="h-16 flex justify-center items-center">
        <img class="h-8 cursor-pointer" src="/images/Zairzalogo.webp" />
      </div>
      <nav class="text-black text-base font-semibold pt-3 h-96">
        <a
          href="/me"
          class="flex items-center text-black hover:text-white py-4 pl-6 nav-item my-4"
        >
          <i class="fas fa-tachometer-alt mr-3"></i>
          Dashboard
        </a>
        <a
          href="/projects"
          class="flex items-center text-black hover:text-white py-4 pl-6 nav-item my-4"
        >
          <i class="fas fa-project-diagram mr-3"></i>
          Zairza Projects
        </a>
      </nav>
    </aside>

    <div class="relative w-full flex flex-col h-screen overflow-y-hidden">
      <!-- Desktop Header -->
      <header class="w-full items-center bg-white py-2 px-6 hidden lg:flex">
        <% if(user.role == 'restricted') {%>
          <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-red-700 rounded"> Restricted User </span>
          <% } else if(user.role == 'admin') { %>
          <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-indigo-700 rounded"> Admin User </span>
          <% } else { %>
          <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-blue-700 rounded"> Member User </span>
          <% } %>
        <div class="w-1/2"></div>
        <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
          <button
            @click="isOpen = !isOpen"
            class="realtive z-10 w-12 h-12 rounded-full overflow-hidden border-4 border-gray-400 hover:border-gray-300 focus:border-gray-300 focus:outline-none"
          >
            <img src="https://www.pikpng.com/pngl/m/80-805068_my-profile-icon-blank-profile-picture-circle-clipart.png" />
          </button>
          <button
            x-show="isOpen"
            @click="isOpen = false"
            class="h-full w-full fixed inset-0 cursor-default"
          ></button>
          <div
            x-show="isOpen"
            class="absolute bg-gray-100 rounded-lg shadow-lg py-2 mt-16"
          >
            <a href="/profile" class="block px-4 py-2 account-link hover:text-white"
              >My Profile</a
            >
            <a href="#" class="block px-4 py-2 account-link hover:text-white"
              onclick="logout()"
              >Sign Out</a
            >
            <a
              href="#"
              onclick="toggleModal()"
              class="block px-4 py-2 account-link hover:text-white"
              >Delete account</a
            >
          </div>
        </div>
      </header>

      <!-- Mobile Header & Nav -->
      <header
        x-data="{ isOpen: false }"
        class="w-full bg-sidebar py-5 px-6 lg:hidden bg-white"
      >
        <div class="flex items-center justify-between">
          <img class="h-8 cursor-pointer" src="/images/Zairzalogo.webp" />
          <% if(user.role == 'restricted') {%>
            <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-red-700 rounded"> Restricted User </span>
            <% } else if(user.role == 'admin') { %>
            <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-indigo-700 rounded"> Admin User </span>
            <% } else { %>
            <span class="inline-flex items-center justify-center w-40 px-4 py-2 text-sm font-bold leading-none text-white bg-blue-700 rounded"> Member User </span>
            <% } %>
          <button
            @click="isOpen = !isOpen"
            class="text-black text-3xl focus:outline-none"
          >
            <i x-show="!isOpen" class="fas fa-bars"></i>
            <i x-show="isOpen" class="fas fa-times"></i>
          </button>
        </div>

        <!-- Dropdown Nav -->
        <nav :class="isOpen ? 'flex': 'hidden'" class="flex flex-col pt-4">
          <a
            href="/me"
            class="flex items-center text-black hover:text-white my-2 opacity-75 hover:opacity-100 py-2 pl-4 nav-item"
          >
            <i class="fas fa-tachometer-alt mr-3"></i>
            Dashboard
          </a>
          <a
            href="/projects"
